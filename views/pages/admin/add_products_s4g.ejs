<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../../partials/head %>
    <link href="/css/admin-panel.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
  </head>
  <body>
    <!-- Page wrapper -->
    <div class="page-wrapper chiller-theme toggled">
      <%- include ../../partials/admin-sidebar %>
      <!-- page-content" -->
      <main class="page-content">
        <div class="container-fluid">

        <div class="col mx-auto my-auto" style="margin-bottom: 2rem;">

        <h2 class="text-center text-primary-color">Adding game to database</h2>
        <div class="row" style="margin-bottom: 2rem;"></div>          

        <div class="row" style="margin-bottom: 2rem;">
          <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <img src="<%= gameInfo.header_image %>" alt=""></img>
          </div>
        </div>

        <form class="login_form row" action="/admin/products/add/s4g" method="get">
          <!--1 entry-->
          <div class="col-md-1 col-lg-2">
            <label for="product_name">Product name:</label>
          </div>
          <div class="col-md-11 col-lg-10 form-group">
            <input class="form-control" type="text" name="product_name" value="<%=gameInfo.name%>">
          </div>
          <!--1 entry-->

          <!--1 entry-->
          <div class="col-md-1 col-lg-2">
            <label for="product_price">Price (<%=gameInfo.price_overview.currency%>):</label>
          </div>
          <div class="col-md-11 col-lg-10 form-group">
            <input class="form-control" type="number" step="0.01" name="product_price" value="<%=gameInfo.price_overview.final/100%>">
          </div>
          <!--1 entry-->

          <!--1 entry-->
          <div class="col-md-1 col-lg-2">
            <label for="product_name">Category:</label>
          </div>
          <div class="col-md-11 col-lg-10 form-group">
            <input class="form-control" type="text" name="product_category" value="">
          </div>
          <!--1 entry-->
          
          <!--1 entry-->
          <div class="col-12 col-lg-6">
            <div class="row">
              <div class="col-2">
                <label for="product_isnew">New:</label>
              </div>
              <div class="col-10 form-group">
                <input class="form-control" type="checkbox" name="product_isnew" value="new">
              </div>  
            </div>
          </div>
          <!--1 entry-->
          <!--1 entry-->
          <div class="col-12 col-lg-6">
            <div class="row">
              <div class="col-2">
                <label for="product_ishot">Hot:</label>
              </div>
              <div class="col-10 form-group">
                <input class="form-control" type="checkbox" name="product_hot" value="hot">
              </div>  
            </div>
          </div>
          <!--1 entry-->
        </form>         
      </div><!--/col-->

          
          
        </div>
        <footer class="footer_area">
          <%- include ../../partials/footer %>
        </footer>
      </main>
    </div>

    <!--================Scripts=========================-->
    <%- include ../../partials/scripts %>
    <script src="/js/admin.js"></script>
    <!--================End scripts=========================-->
  </body>
</html>