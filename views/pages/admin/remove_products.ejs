<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../../partials/head %>
    <link href="/css/admin-panel.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
  </head>
  <body>
    <!-- Page wrapper -->
    <div class="page-wrapper chiller-theme toggled">
      <%- include ../../partials/admin-sidebar %>
      <!-- page-content" -->
      <main class="page-content">
        <div class="container-fluid">

        <h2 class="text-center text-primary-color">Change avatar</h2>
        <div class="row align-self-center" style="margin-bottom: 2rem;"></div>  
      <div class="row product-area-container">
    
        <% if (products) products.forEach(product => { %>
          <!-- 1 product -->
          <div class="product-container col-md-6 col-lg-4 col-xl-3">
            <div class="fillter_product">
              <div class="l_product_item">
                <div class="l_p_img">
                  <img src="<%= product.header_image %>" alt="">
                </div>
                <div class="l_p_text">
                  <ul>
                    <% var url = '/login?redirect?url=products'; var btnText = 'Add to cart';%>
                    <% if (role != "GUEST" && role != "ADMIN") url = '/cart/' + user.UID + '/add?id=' + product.STEAMID; %>
                    <% if (role == "ADMIN") {url = '/admin/products/removeItem?id=' + product.STEAMID; btnText = 'Remove product';} %>
                    <li><a class="add_cart_btn" href="<%=url%>"><%=btnText%></a></li>
                  </ul>
                  <h4><%=product.Name%></h4>
                  <h5><%=product.Price%></h5>
                </div>
              </div>
            </div>
          </div>
          <!-- 1 product -->
        <% }); %>
        

      </div>

          
          
        </div>
        <footer class="footer_area">
          <%- include ../../partials/footer %>
        </footer>
      </main>
    </div>

    <!--================Scripts=========================-->
    <%- include ../../partials/scripts %>
    <script src="/js/admin.js"></script>
    <!--================End scripts=========================-->
  </body>
</html>