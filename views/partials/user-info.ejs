<div class="text-center">
  <h1 class="username-label"><%= owner.Username %></h1>
  <img src="<%= owner.pathToAvatar %>" class="avatar rounded-circle img-thumbnail" alt="avatar">
  <% if (isOwner) { %>
    <h6>Upload a different photo...</h6>
    <form action="/user/change-avatar" method="post" enctype='multipart/form-data'>
      <input type="file" name="avatar_upload" accept="image/*" class="text-center center-block file-upload">
      <button class="btn_avatar_change" type="submit" value="submit"> Change avatar</button>
    </form>
  <% } %>
</div></hr><br>                
  
<% if (isOwner) { %>
  <ul class="user-nav list-group">
    <li class="list-group-item user-nav-header">Control panel</li>
    <li class="list-group-item"><a href="/user/<%=owner.UID%>" id="user">Home</a>
    <li class="list-group-item"><a href="/user/<%=owner.UID%>/change-password" id="user-change-password">Change password</a></li>
    <li class="list-group-item"><a href="/user/<%=owner.UID%>/orders" id="user-orders">View orders</a></li>
    <li class="list-group-item"><a href="/logout">Log out</a></li>
  </ul>      
<% } %>          

<script>
  var page = document.getElementById("<%=page%>");
  page.classList.add('active');
</script>